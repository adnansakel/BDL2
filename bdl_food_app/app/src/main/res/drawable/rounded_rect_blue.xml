<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
    <shape android:shape="rectangle">
            <corners android:radius="5dp"/>

            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />

            
            <stroke android:width="0.5dp" android:color="#03bec0" />

            <gradient android:angle="270"  android:centerColor="#03bec0" android:endColor="#03bec0" android:startColor="#03bec0" />
        </shape>
        </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>

            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp" />


            <stroke android:width="0.5dp" android:color="#03bec0" />

            <gradient android:angle="270"  android:centerColor="#aa03bec0" android:endColor="#aa03bec0" android:startColor="#aa03bec0" />
        </shape>
    </item>
    </selector>