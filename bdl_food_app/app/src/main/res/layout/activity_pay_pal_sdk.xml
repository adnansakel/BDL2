<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PayPal_sdk"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#ffffff"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pay To the Chef"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:allowUndo="true" />

    <EditText
        android:layout_width="fill_parent"
        android:hint="Enter Chef&apos;s Email Id"
        android:layout_height="wrap_content"
        android:id="@+id/editText_friend_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_amount"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:text="50"
        android:visibility="gone"
        android:layout_below="@+id/editText_friend_name"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_paywithpaypal"
        android:background="@drawable/btn_checkout"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true" />

</LinearLayout>
